# ComplianceIQ Microservices Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE PASSWORDS
# =============================================================================
DB_PASSWORD=complianceiq_dev_password_change_me

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=redis_dev_password_change_me

# =============================================================================
# RABBITMQ
# =============================================================================
RABBITMQ_PASSWORD=rabbitmq_dev_password_change_me

# =============================================================================
# MinIO (S3-compatible storage)
# =============================================================================
MINIO_ROOT_USER=complianceiq
MINIO_ROOT_PASSWORD=complianceiq_minio_dev_password

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change-me-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256

# =============================================================================
# ENCRYPTION
# =============================================================================
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=change-me-to-32-byte-key-in-production

# =============================================================================
# EMAIL CONFIGURATION (SendGrid, Gmail, etc.)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@complianceiq.com

# =============================================================================
# STRIPE (for billing)
# =============================================================================
STRIPE_API_KEY=sk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# TWILIO (for SMS notifications)
# =============================================================================
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# =============================================================================
# MONITORING (Grafana)
# =============================================================================
GRAFANA_PASSWORD=admin

# =============================================================================
# SERVICENOW (for testing)
# =============================================================================
SERVICENOW_TEST_INSTANCE_URL=https://dev123456.service-now.com
SERVICENOW_TEST_USER=admin
SERVICENOW_TEST_TOKEN=your-servicenow-api-token

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true
